# Stock Sentiment Bot - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# ALPACA API (Required)
# Get your keys at: https://app.alpaca.markets/paper/dashboard/overview
# =============================================================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Use paper trading URL for testing (RECOMMENDED to start)
# Paper: https://paper-api.alpaca.markets
# Live: https://api.alpaca.markets
ALPACA_BASE_URL=https://paper-api.alpaca.markets


# =============================================================================
# REDDIT API (Required for sentiment)
# Create app at: https://www.reddit.com/prefs/apps
# Select "script" type application
# =============================================================================
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=SentimentBot/1.0 (by /u/your_username)


# =============================================================================
# TELEGRAM NOTIFICATIONS (Optional but recommended)
# Create bot with @BotFather, get chat_id with @userinfobot
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here


# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Dry run mode (true = simulate trades, false = real orders)
# IMPORTANT: Keep this true until you've validated the system!
DRY_RUN=true

# Database path
DATABASE_PATH=data/sentiment_bot.db
