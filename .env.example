# ============================================
# FOREX TRADING SYSTEM CONFIGURATION
# ============================================

# -----------------
# System Settings
# -----------------
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=false
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# -----------------
# Broker Configuration
# -----------------
BROKER=demo  # Options: mt5, oanda, demo

# MT5 Credentials (NEVER hardcode in source)
MT5_LOGIN=
MT5_PASSWORD=
MT5_SERVER=

# OANDA Credentials
OANDA_API_KEY=
OANDA_ACCOUNT_ID=
OANDA_ENVIRONMENT=practice  # Options: practice, live

# Demo Broker Settings
DEMO_INITIAL_BALANCE=10000
DEMO_SLIPPAGE_PIPS=0.5

# -----------------
# Telegram Bot
# -----------------
TELEGRAM_BOT_TOKEN=
TELEGRAM_USER_ID=  # Your Telegram user ID for notifications

# -----------------
# Database Configuration
# -----------------
# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=forex_trading
POSTGRES_USER=
POSTGRES_PASSWORD=
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# -----------------
# Risk Management
# -----------------
RISK_PER_TRADE=0.03  # 3% per trade (aggressive)
HIGH_CONFIDENCE_RISK=0.05  # 5% for auto-execute trades
DAILY_LOSS_LIMIT=0.10  # 10% daily loss limit
WEEKLY_LOSS_LIMIT=0.20  # 20% weekly loss limit
MAX_DRAWDOWN=0.30  # 30% max drawdown threshold
MAX_POSITIONS=5  # Maximum concurrent positions
MAX_POSITIONS_PER_PAIR=2  # Max positions per currency pair

# -----------------
# Trading Strategy Configuration
# -----------------
# Enabled Timeframes (comma-separated)
ENABLED_STRATEGIES=scalping,day_trading,swing_trading

# Auto-Execute Thresholds
AUTO_EXECUTE_CONFIDENCE=0.80  # 80% minimum confidence
AUTO_EXECUTE_RISK_REWARD=3.0  # 1:3 minimum R/R
AUTO_EXECUTE_MIN_INDICATORS=4  # At least 4 indicators aligned

# Currency Pairs (comma-separated)
TRADING_PAIRS=EURUSD,GBPUSD,USDJPY,AUDUSD,USDCAD,EURJPY,GBPJPY

# -----------------
# Leverage Settings
# -----------------
LEVERAGE_SCALPING=50
LEVERAGE_DAY_TRADING=30
LEVERAGE_SWING_TRADING=20

# -----------------
# Market Data
# -----------------
# Data Provider API Keys (if using external data)
ALPHA_VANTAGE_API_KEY=
TWELVE_DATA_API_KEY=

# Data refresh intervals (seconds)
DATA_REFRESH_SCALPING=5  # 5 seconds for scalping
DATA_REFRESH_DAY_TRADING=60  # 1 minute for day trading
DATA_REFRESH_SWING_TRADING=300  # 5 minutes for swing trading

# -----------------
# Monitoring & Alerting
# -----------------
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_ALERTS=true
HEALTH_CHECK_INTERVAL=60  # seconds

# -----------------
# Advanced Settings
# -----------------
# News Filter (disable trading during major events)
ENABLE_NEWS_FILTER=true
NEWS_MINUTES_BEFORE=30
NEWS_MINUTES_AFTER=30

# Spread Filters (pips)
MAX_SPREAD_SCALPING=3.0
MAX_SPREAD_DAY_TRADING=5.0
MAX_SPREAD_SWING_TRADING=8.0

# Correlation Filter
ENABLE_CORRELATION_FILTER=true
MAX_CORRELATED_PAIRS=2

# Backtesting
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-12-31