# Database Configuration
DATABASE_URL=postgresql://trader:your_password_here@localhost:5432/forex_trading
DB_PASSWORD=your_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379

# AI API Keys
GEMINI_API_KEY=your_gemini_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Binance API (for crypto trading)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# OANDA API (for forex trading)
OANDA_API_KEY=your_oanda_api_key
OANDA_ACCOUNT_ID=your_oanda_account_id
OANDA_PRACTICE=true  # Set to false for live trading

# MetaTrader 5 (for forex/CFD trading)
MT5_LOGIN=your_mt5_login
MT5_PASSWORD=your_mt5_password
MT5_SERVER=your_mt5_server

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development  # development, staging, production

# Trading Configuration
DEFAULT_RISK_PROFILE=moderate  # conservative, moderate, aggressive
MAX_POSITION_SIZE=0.15  # Maximum % of balance per trade
MAX_PORTFOLIO_HEAT=0.25  # Maximum total risk exposure
ENABLE_PAPER_TRADING=true
ENABLE_DEMO_TRADING=false
ENABLE_LIVE_TRADING=false

# Frontend Configuration (for frontend/.env.local)
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws
